@model IEnumerable<PizzeriaExpress.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}

<h2>Carrello</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consegna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredienti)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consegna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredienti)
            </td>
            <td>
                @Html.ActionLink("Elimina", "Delete", new { id = item.IdProdotto })
            </td>
        </tr>
    }

</table>

<div>
    <div>
        <h3>Totale</h3>
    </div>
    <p>@Model.Sum(p => p.Prezzo).ToString("0.00")€</p>
</div>
    <label for="basic-url" class="form-label">Note</label>
<div class="input-group">
    <span class="input-group-text">Note</span>
    <textarea class="form-control" aria-label="With textarea"></textarea>
</div>
<div class="mb-3 mt-3">
    <label for="basic-url" class="form-label">Indirizzo</label>
    <div class="input-group">
        <span class="input-group-text" id="basic-addon3">Indirizzo</span>
        <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4">
    </div>
</div>



