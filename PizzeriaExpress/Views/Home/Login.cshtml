@model PizzeriaExpress.Models.Utenti


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">Accedi</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-warning" })
        <div style="display: flex; flex-direction: row; justify-content: space-evenly;">
            <div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-warning" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Psw, "Password", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Psw, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Psw, "", new { @class = "text-warning" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Accedi" class="btn btn-light rounded-5 bg-gradient mt-2 mb-2" />
                    </div>
                </div>
            <p class="text-center mb-0">Sei nuovo da queste parti?</p>
            <p class="text-center">Registrati <a href="@Url.Action("Register", "Home")">qui</a></p>
            </div>
            <div>
                <img src="~/Content/img/tip.jpg" alt="Pizza" style="width: 100%; max-width: 380px ">
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
