@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">Le Nostre Pizze</h1>

<h3>Cerca la tua pizza preferita</h3>
@using (Html.BeginForm("Search", "Prodotti", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBox("productName", null, new { @class = "form-control", placeholder = "Cerca" })
    </div>
    <button type="submit" class="btn btn-light rounded-5 bg-gradient mt-2 mb-2">Cerca</button>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-2" style="width: 312px; display: flex; flex-direction: column; justify-content: space-between; ">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/img/@item.Foto" style="height: 285px; width:285px" class="rounded-4 mt-2" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/img/@item.Foto2" style="height: 285px; width: 285px" class="rounded-4 mt-2" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/img/@item.Foto3" style="height: 285px; width: 285px" class="rounded-4 mt-2" alt="...">
                    </div>
                </div>           

            <div class="card-body">
                <h5 class="card-title">@item.Nome</h5>
                <p class="card-text">Prezzo: @item.Prezzo.ToString("0.00") €</p>
                <p class="card-text">Consegna: @item.Consegna.ToString("hh\\:mm") minuti</p>
                <p class="card-text text-truncate">Ingredienti: @item.Ingredienti</p>
                <hr />
                <a href="@Url.Action("Details", "Prodotti", new { id = item.IdProdotto })" class="btn btn-primary bg-gradient rounded-5">Dettagli</a>
                @using (Html.BeginForm("AddToCart", "Prodotti", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@item.IdProdotto" />
                    <label for="Quantita">Quantità:</label>
                    <input id="Quantita" type="number" name="quantita" value="1" min="1" max="30">
                    <input type="submit" value="Aggiungi al carrello" class="btn btn-success bg-gradient rounded-5">
                }
              
            </div>
            </div>
        </div>
    }
</div>

