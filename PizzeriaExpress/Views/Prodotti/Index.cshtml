@{
    ViewBag.Title = "Index";
}

<h2>Le Nostre Pizze</h2>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Aggiungi Prodotto", "Create")
    </p>
}



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div id="carousel-@item.IdProdotto" class="carousel slide" data-interval="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/img/@item.Foto" class="d-block w-100" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/img/@item.Foto2" class="d-block w-100" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/img/@item.Foto3" class="d-block w-100" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-@item.IdProdotto" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only"></span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-@item.IdProdotto" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only"></span>
                    </a>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text">Prezzo: @item.Prezzo.ToString("0.00") €</p>
                    <p class="card-text">Consegna: @item.Consegna.ToString("hh\\:mm") minuti</p>
                    <p class="card-text">Ingredienti: @item.Ingredienti</p>
                    <a href="@Url.Action("Details", "Prodotti", new { id = item.IdProdotto })" class="btn btn-primary">Dettagli</a>
                    <a href="@Url.Action("AddToCart", "Prodotti", new { id = item.IdProdotto })" class="btn btn-secondary">Aggiungi al carrello</a>
                </div>
            </div>
        </div>
    }
</div>
